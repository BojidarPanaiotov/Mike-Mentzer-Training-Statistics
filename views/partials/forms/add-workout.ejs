<div class="row justify-content-center mt-5">
  <div class="col-4">
    <form method="POST" action="/workout/add-workout">
      <div class="mb-3">
        <label for="custom-program-type" class="form-label"
          >Custom Program Type</label
        >
        <input type="text" name="type" class="form-control" id="type" />
      </div>

      <div class="mb-3">
        <label for="creation-date" class="form-label">Creation Date</label>
        <input
          type="date"
          name="data"
          class="form-control"
          id="creation-date" />
      </div>

      <% for (var i =1; i <= locals.exerciseCount; i++ ) { %>
      <div class="row">
        <div class="col-12">
          <div class="mb-3">
            <label for="exercise-<%= i %>" class="form-label"
              >Exercise <%= i %>
            </label>
            <input
              type="text"
              name="exercise-<%= i %>"
              class="form-control"
              id="exercise-<%= i %>" />
          </div>
        </div>
        <div class="col-6">
          <div class="mb-3">
            <label for="exercise-<%= i %>-weight" class="form-label"
              >Weight (kg)</label
            >
            <input
              type="number"
              name="weight-<%= i %>"
              class="form-control"
              id="exercise-<%= i %>-weight"
              min="0"
              max="1000" />
          </div>
        </div>
        <div class="col-6">
          <label for="exercise-one-rep-one" class="form-label">Reps</label>
          <input
            type="number"
            name="reps-<%= i %>"
            class="form-control"
            id="exercise-reps-"
            min="0"
            max="1000" />
        </div>
      </div>
      <% } %>

      <button type="submit" class="btn btn-primary mt-5">Submit</button>
    </form>
  </div>
</div>
